{
  "name": "toptier-electrical-site",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "node scripts/build.mjs",
    "verify": "node scripts/verify.mjs",
    "dev": "node scripts/dev.mjs",
    "verify:zero-updates": "node scripts/verify-zero-updates.mjs",
    "verify:stability": "node scripts/verify-stability.mjs",
    "check:workflows": "node scripts/check-workflow-yaml.mjs",
    "check:redirects-cloudflare": "node scripts/check-redirects-cloudflare.mjs",
    "check:no-binaries": "bash scripts/check-no-binary-files.sh",
    "qa": "npm run format:check && npm run lint && npm run check:placeholders && npm run check:origin-redirects && npm run audit:images && npm run check:redirects-cloudflare && npm run check:extensionless-links && npm run check:navigation-sim && npm run qa:server-checks",
    "check:origin-redirects": "node scripts/check-origin-redirects.js",
    "repo:clean-export": "node scripts/create-clean-repo.mjs",
    "audit:images": "node scripts/audit-image-text-references.js",
    "qa:server-checks": "bash -lc 'set -euo pipefail; if [ -x node_modules/.bin/wrangler ]; then WRANGLER=node_modules/.bin/wrangler; WRANGLER_ARGS=\"pages dev . --port 8788\"; else WRANGLER=npx; WRANGLER_ARGS=\"--yes wrangler@4.64.0 pages dev . --port 8788\"; fi; bash -lc \"$WRANGLER $WRANGLER_ARGS\" >/tmp/wrangler-pages-dev.log 2>&1 & SERVER_PID=$!; trap \"kill $SERVER_PID 2>/dev/null || true\" EXIT; npx wait-on http://127.0.0.1:8788; npm run audit:a11y && npm run audit:lighthouse'",
    "check:navigation-sim": "PAGES_DEV_PORT=8790 node scripts/check-navigation-sim.mjs",
    "check:extensionless-links": "node scripts/check-extensionless-links.mjs",
    "check:extensionless-collisions": "node scripts/check-extensionless-collisions.mjs",
    "check:navigation-sim": "PAGES_OUTPUT_DIR=dist node scripts/check-navigation-sim.mjs",
    "format:check": "npx --yes prettier@3.2.5 --check \"**/*.{html,css,js,json,md}\"",
    "lint": "npm run verify",
    "check:placeholders": "node scripts/check-placeholders.mjs",
    "check:origin-redirects": "node scripts/check-origin-redirects.mjs",
    "audit:images": "node scripts/audit-images.mjs",
    "audit:links": "PAGES_OUTPUT_DIR=dist node scripts/audit-links-cloudflare.mjs"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "html-minifier-terser": "^7.2.0",
    "node-html-parser": "^6.1.13",
    "sharp": "^0.33.5",
    "yaml": "^2.5.1"
  }
}

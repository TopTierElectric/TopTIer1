{
  "name": "toptier-electrical",
  "version": "1.0.0",
  "description": "Top Tier Electrical - Trusted electrician serving West Michigan",
  "private": true,
  "scripts": {
    "build": "echo 'Static site - no build required'",
    "dev": "npx http-server -p 8888",
    "format": "npx prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "npx prettier --check \"**/*.{html,css,js,json,md}\"",
    "lint:html": "npx html-validate '*.html'",
    "lint:css": "npx stylelint 'styles.css'",
    "validate:html": "npx html-validate '*.html'",
    "audit:links": "npx linkinator . --recurse --skip 'tel:' --skip 'mailto:'",
    "audit:a11y": "npx pa11y-ci",
    "audit:lighthouse": "npx lighthouse http://127.0.0.1:8888 --output=html --output-path=reports/lighthouse.html --chrome-flags='--headless=new --no-sandbox'",
    "check:placeholders": "node scripts/check-placeholders.js",
    "qa": "npm run format:check && npm run validate:html && npm run lint:css && npm run audit:links && npm run audit:a11y && npm run audit:lighthouse && npm run check:placeholders"
  },
  "keywords": [
    "electrician",
    "west-michigan",
    "electrical-services"
  ],
  "author": "Top Tier Electrical",
  "license": "UNLICENSED",
  "devDependencies": {
    "html-validate": "^8.0.0",
    "linkinator": "^6.0.0",
    "pa11y-ci": "^4.0.1",
    "prettier": "^3.2.5",
    "sharp": "^0.33.2",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

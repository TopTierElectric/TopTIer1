{
  "name": "toptier-electrical-site",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "node scripts/build.mjs",
    "verify": "node scripts/verify.mjs",
    "dev": "node scripts/dev.mjs",
    "verify:zero-updates": "node scripts/verify-zero-updates.mjs",
    "verify:stability": "node scripts/verify-stability.mjs",
    "check:workflows": "node scripts/check-workflow-yaml.mjs",
    "check:redirects-cloudflare": "node scripts/check-redirects-cloudflare.mjs",
    "check:no-binaries": "bash scripts/check-no-binary-files.sh",
    "check:navigation": "node scripts/check-navigation-sim.mjs",
    "qa": "npm run verify:zero-updates && npm run check:navigation-sim",
    "check:extensionless-links": "node scripts/check-extensionless-links.mjs",
    "check:extensionless-collisions": "node scripts/check-extensionless-collisions.mjs",
    "check:navigation-sim": "PAGES_OUTPUT_DIR=dist node scripts/check-navigation-sim.mjs",
    "format:check": "npx --yes prettier@3.2.5 --check \"**/*.{html,css,js,json,md}\"",
    "lint": "npm run verify",
    "check:placeholders": "node scripts/check-placeholders.mjs",
    "check:origin-redirects": "node scripts/check-origin-redirects.mjs",
    "audit:images": "node scripts/audit-images.mjs",
    "audit:links": "PAGES_OUTPUT_DIR=dist node scripts/audit-links-cloudflare.mjs"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "html-minifier-terser": "^7.2.0",
    "node-html-parser": "^6.1.13",
    "sharp": "^0.33.5",
    "yaml": "^2.5.1"
  }
}
